<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/noimage"
                    android:id="@+id/newIconImageView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/newIconImageView"
                    android:layout_marginTop="65dp"
                    android:id="@+id/userNameTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/userNameTextView"
                    android:layout_marginTop="65dp"
                    android:id="@+id/evaluationConfirmProfileTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/newIconImageView"
                    android:layout_below="@+id/userNameTextView"
                    android:layout_marginStart="10dp"
                    android:id="@+id/ageConfirmProfileTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ageConfirmProfileTextView"
                    android:layout_below="@+id/userNameTextView"
                    android:layout_marginStart="10dp"
                    android:id="@+id/sexConfirmProfileTextView"/>

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="フォロー"
                    android:textOn="フォロー中"
                    android:layout_below="@+id/ageConfirmProfileTextView"
                    android:layout_toEndOf="@+id/newIconImageView"
                    android:layout_marginStart="10dp"
                    android:id="@+id/followFollowerButton"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="編集"
                    android:layout_below="@+id/ageConfirmProfileTextView"
                    android:layout_toEndOf="@+id/newIconImageView"
                    android:layout_marginStart="10dp"
                    android:id="@+id/editButton"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/messageButton"
                    android:layout_toEndOf="@+id/followFollowerButton"
                    android:layout_below="@+id/ageConfirmProfileTextView"
                    android:layout_marginStart="10dp"
                    android:text="メッセージ"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editButton"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/commentTextView"/>

            </RelativeLayout>
        </ScrollView>
    <include layout="@layout/confirmprofile_content_main" />
    </android.support.design.widget.CoordinatorLayout>